@startuml
' --- Configuration for a cleaner and more professional look ---
skinparam actorStyle aw
skinparam usecase {
    BackgroundColor LightBlue
    BorderColor Blue
    ArrowColor #222222
}
skinparam rectangle {
    BorderColor #555555
}
left to right direction
title "Diagramme de Cas d'Utilisation - Application de Virement STB"

' --- Define Actors ---
actor Client
actor Admin

' --- Define System Boundary and Use Cases ---
rectangle "Système de Virement STB" {
    ' Central authentication use case
    usecase "S'authentifier" as UC_Auth

    ' Client Use Cases
    usecase "Gérer son profil" as UC_Profile
    usecase "Gérer les bénéficiaires" as UC_Beneficiaries
    usecase "Initier un virement" as UC_InitiateTransfer
    usecase "Consulter l'historique" as UC_History
    usecase "Recevoir notifications/alertes" as UC_Notifications

    ' Admin Use Cases
    usecase "Gérer les utilisateurs" as UC_ManageUsers
    usecase "Superviser les virements" as UC_SuperviseTransfers
    usecase "Approuver un virement" as UC_ApproveTransfer
    usecase "Rejeter un virement" as UC_RejectTransfer
    usecase "Consulter le tableau de bord" as UC_Dashboard
}

' --- Actor -> Use Case Associations ---
Client --> UC_Profile
Client --> UC_Beneficiaries
Client --> UC_InitiateTransfer
Client --> UC_History
Client --> UC_Notifications

Admin --> UC_ManageUsers
Admin --> UC_SuperviseTransfers
Admin --> UC_Dashboard

' --- Authentication Dependency ---
UC_Profile ..> UC_Auth : <<include>>
UC_Beneficiaries ..> UC_Auth : <<include>>
UC_InitiateTransfer ..> UC_Auth : <<include>>
UC_History ..> UC_Auth : <<include>>
UC_Notifications ..> UC_Auth : <<include>>
UC_ManageUsers ..> UC_Auth : <<include>>
UC_SuperviseTransfers ..> UC_Auth : <<include>>
UC_Dashboard ..> UC_Auth : <<include>>

' --- Supervision includes Approve/Reject ---
UC_SuperviseTransfers ..> UC_ApproveTransfer : <<include>>
UC_SuperviseTransfers ..> UC_RejectTransfer : <<include>>

@enduml
